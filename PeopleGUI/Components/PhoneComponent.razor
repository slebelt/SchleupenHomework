@rendermode InteractiveServer
@using PeopleGUI.Model

<div class="card" style="margin-right:0.5em;margin-bottom:0.5em;@(phone.Dirty ? "border-width:medium;border-color:red" : "");width:25em;">
	<div class="card-body">
		<div class="input-group mb-4" style="margin:0.5em;padding-right:0.5em;">
			<input class="form-control" @bind-value="@phone.PhoneType" placeholder="Type" style="width:5em"/>
			<input id="@(phone.GetHashCode())CountryPrefix" class="form-control" @bind-value="@phone.CountryPrefixStr" placeholder="Land" style="width:3em"/>
			<input id="@(phone.GetHashCode())RegionPrefix" class="form-control" @bind-value="@phone.RegionPrefixStr" placeholder="Vorwahl" style="width:4em"/>
			<input id="@(phone.GetHashCode())Number" class="form-control" pattern="\d*" @bind-value="@phone.NumberStr" placeholder="Nr." style="width:7em"/>
		</div>
		<button class="btn btn-primary" style="float:right;" @onclick="() => OnPhoneDelete.InvokeAsync(phone)">Entfernen</button>
	</div>
</div>

@code
{
	[Parameter]
	public required Phone phone { get; set; }

	[Parameter]
	public EventCallback<Phone> OnPhoneDelete { get; set; }
}